
<!DOCTYPE html>
<html ng-app="GlobalModule" ng-controller="LandingPageController">
<head>
    <title ng-bind="landingPageModel.title"></title>
    <meta charset="utf-8" />
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    <link href="~/Build/Content/angular-material.min.css" rel="stylesheet" />
    <link href="~/Build/Content/angular-material.layouts.min.css" rel="stylesheet" />
    <link href="~/Build/Content/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Build/Content/LayoutStyle.css" rel="stylesheet" />
</head>
<body layout="row">
    <md-sidenav class="md-sidenav-left md-whiteframe-z2 layout-column" md-component-id="left" md-is-locked-open="landingPageModel.leftMenu.isLocked">

        <md-toolbar layout="column" layout-align="end center">
            <md-card class="left_logo">
                <img ng-src="{{landingPageModel.leftLogoBosch}}" />
            </md-card>
            <h2 class="title-position" ng-bind="landingPageModel.projectTitle"></h2>
            <a class="sidebar-brand" ng-bind="landingPageModel.helloUser"></a>
        </md-toolbar>

        <div class='md-padding' layout="column" flex>
            <md-list>
                <md-list-item class="md-2-line item-on-hover" ng-repeat="item in menu" role="link" md-ink-ripple>
                    <md-icon md-svg-icon="{{item.icon}}" aria-label="{{item.title}}"></md-icon>
                    <div class="md-list-item-text">
                        <span class="md-body-2">{{item.title}}</span>
                    </div>
                </md-list-item>
                <md-divider></md-divider>
                <md-subheader class="md-no-sticky">Management</md-subheader>
                <md-list-item class="md-2-line" ng-repeat="item in admin" role="link" md-ink-ripple>
                    <md-icon md-svg-icon="{{item.icon}}" aria-label="{{item.title}}"></md-icon>
                    <div class="md-list-item-text">
                        <span class="md-body-2">{{item.title}}</span>
                    </div>
                </md-list-item>
            </md-list>
        </div>

        <md-content md-ink-ripple="#006064" ng-bind="landingPageModel.footerCopyRight"></md-content>

    </md-sidenav>

    <div layout="column" flex>
        <md-toolbar class="md-whiteframe-glow-z1 site-content-toolbar layout-row" style="z-index:99">

            <span class="showcode" ng-click="leftSidebarToggle()">
                <md-button class="md-fab md-warn md-icon-button">
                    <i class="fa {{landingPageModel.leftMenu.isLocked ?'fa-hand-o-left' : 'fa-hand-o-right'}} fa-2x"></i>
                </md-button>
            </span>
            @*<div class="navigation-sidenav-mode-toggle">
                    <md-button class="md-fab md-primary">
                            <md-icon md-svg-src=""></md-icon>
                    </md-button>
                </div>*@

            <div class="md-toolbar-tools docs-toolbar-tools">
                <h3>Dashboard</h3>
            </div>

            <div md-ink-ripple class="right_logo layout-row layout-fill layout-align-end-center">
                <img ng-src="{{landingPageModel.rightLogoBosch}}" />
            </div>
        </md-toolbar>
        <md-content flex>
            @*<ui-view layout="column" layout-fill layout-padding></ui-view>*@
        </md-content>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Build/Scripts/ShareLibs/angular/angular.min.js"></script>
    <script src="~/Build/Scripts/ShareLibs/angular/angular-animate.min.js"></script>
    <script src="~/Build/Scripts/ShareLibs/angular/angular-ui-router.min.js"></script>
    <script src="~/Build/Scripts/ShareLibs/angular/angular-aria.min.js"></script>
    <script src="~/Build/Scripts/ShareLibs/angular/angular-material.min.js"></script>
    <script src="~/Build/Scripts/Custom/MyApp.js"></script>
    <script src="~/Build/Scripts/Custom/Controller/LandingPageController.js"></script>
</body>
</html>